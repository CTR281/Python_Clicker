<Cannon>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: 95,101  #respecte les proportions du png original
            source: self.source


<Cannonball>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../graphics/cannon/cannonball.png'


<ClickerCell>:
    canvas:
        Color:
            rgba: 1,self.color,self.color,self.color2
        Rectangle:
            pos: self.pos
            size: self.size
            source: '../Graphics/Aventurer_2.png'


<Treasure>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: 100,70
            source: '../Graphics/treasure.png'




<Enemy>:
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size
            source: '../Graphics/Crane.png'

        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: root.pos[0]+root.size[0]+8, root.pos[1]
            size: 5, root.size[1]
        Color:
            rgba: 0,1,0,1
        Rectangle:
            pos: root.pos[0]+root.size[0]+8, root.pos[1]
            size: 5, root.pv
    Label:
        text: "%d/%d" % (root.enemy_weight,root.max)
        color: 1, 1, 1, 1
        center: root.pos[0]+root.size[0]+10, root.pos[1] + root.size[1] + 10


<Falling_spike>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos : self.pos
            source: '../graphics/Falling_spike.png'

